{
	"type": "module",
	"name": "i18next-cli-vue",
	"version": "1.0.1",
	"description": "i18next-cli plugin for extracting i18n keys from Vue SFC files",
	"author": "PBK-B",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest --coverage",
		"lint": "eslint src --ext .ts",
		"format": "prettier --write 'src/**/*.ts'",
		"format:check": "prettier --check 'src/**/*.ts'",
		"release": "changeset version && npm run build && git add -A && git commit -m 'chore: release' && npm run build && npm publish"
	},
	"changeset": {
		"$schema": "https://unpkg.com/@changesets/schema@2.3.0/schema.json",
		"access": "public"
	},
	"peerDependencies": {
		"i18next-cli": "^1.11.11",
		"vue": "^2.6.0 || ^3.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@rollup/plugin-typescript": "^12.3.0",
		"@types/node": "^25.1.0",
		"@vue/compiler-sfc": "^3.5.27",
		"prettier": "^3.8.1",
		"rollup": "^4.57.0",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"vue-template-compiler": "^2.7.16"
	},
	"keywords": [
		"i18next",
		"i18next-cli",
		"vue",
		"vue3",
		"internationalization",
		"translation"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/PBK-B/i18next-cli-vue"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org",
		"access": "public"
	}
}
